# Set the path to the OpenDJ instance to manage
INSTALL_ROOT="/opt/opendj"
export INSTALL_ROOT

cd ${INSTALL_ROOT}

# Specify the path to the Java installation to use
OPENDJ_JAVA_HOME="/usr/lib/jvm/jre"
export OPENDJ_JAVA_HOME

# Determine what action should be performed on the server
case "${1}" in
start)
  /bin/su opendj -c "${INSTALL_ROOT}/bin/start-ds"
  exit ${?}
  ;;
stop)
  /bin/su opendj -c "${INSTALL_ROOT}/bin/stop-ds"
  exit ${?}
  ;;
restart)
  /bin/su opendj -c "${INSTALL_ROOT}/bin/stop-ds --restart"
  exit ${?}
  ;;
*)
  echo "Usage:  $0 { start | stop | restart }"
  exit 1
  ;;
esac
